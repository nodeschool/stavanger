@import 'variables'

$workshop-list-width = 600px

.WorkshopList
    border 1px solid $color
    width $workshop-list-width
    margin-top 30px
    margin-left auto
    margin-right auto

    .WorkshopListHeader
        color white
        background-color $color
        height 40px
        line-height 40px
        text-indent 10px

    .WorkshopListItem
        height 30px
        line-height 30px

        div
            float left
            overflow hidden

        .WorkshopListItemTitle
            width 30%
            text-indent 10px

        .WorkshopListItemPreview
            width 50%

        .WorkshopListItemTime
            width 18%
            text-align right

        &:after
            content ''
            display block
            clear both